<!--  DarkTheme.xaml  -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!--  Estilos para el fondo y el texto  -->
    <SolidColorBrush x:Key="DarkBackgroundColor" Color="#282828" />
    <SolidColorBrush x:Key="LightTextColor" Color="WhiteSmoke" />

    <!--  Estilo para los controles  -->
    <Style TargetType="{x:Type Control}">
        <Setter Property="Background" Value="{StaticResource DarkBackgroundColor}" />
        <Setter Property="Foreground" Value="{StaticResource LightTextColor}" />
    </Style>
</ResourceDictionary>
