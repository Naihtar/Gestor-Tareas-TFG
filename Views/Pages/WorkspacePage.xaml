<Page
    x:Class="TFG.Views.Pages.WorkSpacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TFG.Views.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    Title="Test"
    d:DesignHeight="720"
    d:DesignWidth="1280"
    mc:Ignorable="d">
    <Border Background="#323232" CornerRadius="16,0,0,0">
        <Grid>
            <!--  Información del usuario  -->
            <StackPanel x:Name="UserInfoPanel" Margin="16">
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Text="{Binding NombreUsuario}" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Text="{Binding Apellido1Usuario}" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Text="{Binding Apellido2Usuario}" />
                <TextBlock
                    Margin="0,0,0,10"
                    FontSize="16"
                    Text="{Binding EmailUsuario}" />
                <ui:ProgressRing IsIndeterminate="True" />
            </StackPanel>
        </Grid>
    </Border>
</Page>
